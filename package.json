  },
  "homepage": "https://github.com/vault12/glow.ts#readme",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist/",
    "build:esm": "tsc",
    "build:commonjs": "tsc -p ./tscconfig.cjs.json",
    "build": "npm run clean && npm run build:esm && npm run build:commonjs",
    "prepublishOnly": "npm run build",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "jest",
    "test:jsdom": "jest --selectProjects jsdom",
    "test:node": "jest --selectProjects node",
    "test:coverage": "jest --selectProjects node --coverage",
    "test:watch": "jest --selectProjects node --watch"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "async-mutex": "0.5.0",
    "tweetnacl": "1.0.3"
  },
  "devDependencies": {
    "@eslint/js": "9.25.1",
    "@jest/types": "29.6.3",
    "@types/jest": "29.5.14",
    "@types/node": "22.15.3",
    "eslint": "9.25.1",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-localstorage-mock": "2.4.26",
    "ts-jest": "29.3.2",
    "ts-node": "10.9.2",
    "typescript": "5.8.3",
    "typescript-eslint": "8.31.1"
  }
