{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2018",
    "lib": [
      "dom",
      "es2018"
    ],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "stripInternal": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types",
    "outDir": "dist/",
    "resolveJsonModule": true,
    "noImplicitAny": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
